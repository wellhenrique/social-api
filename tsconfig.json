{
  "compilerOptions": {
    "plugins": [
      {
        "transform": "ts-reflection/transformer"
      }
    ],
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "es2016",
    "lib": ["es2016"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./src"]
}
